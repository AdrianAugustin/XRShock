<UserControl x:Class="ShockCollar.UserControls.ModeSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ShockCollar.UserControls"
             mc:Ignorable="d" 
            >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />

            <RowDefinition Height="*" />



            <RowDefinition Height="10" />
        </Grid.RowDefinitions>
        <Button
            x:Name="LED"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="1"

            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding LEDBackColor, UpdateSourceTrigger=PropertyChanged}"
            BorderBrush="Black"
            Command="{Binding BlinkCommand}"
            Content="LED" />
        <Button
            x:Name="Vibrate"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="3"

      
                       HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding VibrateBackColor, UpdateSourceTrigger=PropertyChanged}"
            BorderBrush="Black"
             Command="{Binding VibrateCommand}"
            Content="Vibrate" />
        <Button
            x:Name="Shock"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="5"

         
                       HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding ShockBackColor, UpdateSourceTrigger=PropertyChanged}"
            BorderBrush="Black"
             Command="{Binding ShockCommand}"
            Content="Shock" />
        <Button
            x:Name="Sound"
            Grid.Row="1"
            Grid.RowSpan="1"
            Grid.Column="7"

          
                       HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="{Binding SoundBackColor, UpdateSourceTrigger=PropertyChanged}"
            BorderBrush="Black"
             Command="{Binding ToneCommand}"
            Content="Sound" />
    </Grid>
</UserControl>
